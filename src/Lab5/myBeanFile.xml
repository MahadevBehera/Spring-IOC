<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Default name for this bean configuration file is "applicationContext.xml" , if we don't provide our own name -->
	
	<!-- Hello bean configuration -->
	 <bean id="hello" class="Lab5.Hello" scope="singleton" lazy-init="true"/>  <!-- This is by default singleton scope bean thats why by default the loading type is aggressive for this bean, so we are changing the loading type to Lazy load-->
	
	<!-- <bean id="hello" class="Lab5.Hello" scope="prototype" lazy-init="false"/>  -->
</beans>
